{
  "name": "@eco/currency",
  "version": "4.0.2",
  "description": "The Eco cryptocurrency contracts, governance contracts, and associated tooling.",
  "main": "index.js",
  "scripts": {
    "format": "concurrently 'npm:format:*'",
    "format:prettier": "prettier --write 'contracts/**/*.sol'",
    "format:eslint": "eslint --fix 'tools/**/**.js' 'tools/**/**.ts' 'test/**/**.js' 'test/**/**.ts",
    "lint": "concurrently 'npm:lint:*'",
    "lint:depcheck": "depcheck --ignore-bin-package --ignores @openzeppelin/contracts,prettier-plugin-solidity,solhint-plugin-eco,concurrently",
    "lint:solhint": "solhint 'contracts/**/*.sol'",
    "lint:eslint": "eslint 'tools/**/**.js' 'test/**/**.js'",
    "lint:prettier": "prettier --check 'contracts/**/*.sol'",
    "build": "hardhat compile",
    "test": "hardhat test",
    "debug": "hardhat test",
    "coverage:js": "npx nyc --reporter=html --reporter=text --reporter=lcov --include 'tools/**.js' --report-dir coverage-nyc hardhat coverage",
    "coverage:sol": "IS_COVERAGE=1 hardhat coverage",
    "coverage": "npm run coverage:js && npm run coverage:sol",
    "generate": "tools/nicks.js $(pwd)/build/contracts/EcoBootstrap.json -s 0x1234 -d 0x00000000000000000000000028e69be378b59264018b11616fbbd15eb345668c -o bootstrap.json -g 3038418",
    "prepack": "npm run build",
    "deploy": "npm run build && node tools/eco.js --config",
    "deploy:dev": "node tools/eco.js --supervise --ganache --deploy --devmode"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eco/currency.git"
  },
  "keywords": [
    "solidity",
    "ethereum"
  ],
  "files": [
    "tools/**.js",
    "contracts/**.sol",
    "build/contracts/**.json"
  ],
  "author": "Eco Engineering <eng@eco.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eco/currency/issues"
  },
  "homepage": "https://github.com/eco/currency#readme",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-truffle5": "^2.0.6",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/gsn-helpers": "0.2.4",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^6.1.2",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "bigint-crypto-utils": "3.0.24",
    "bn.js": "^5.2.1",
    "chai": "4.3.6",
    "concurrently": "7.2.2",
    "coveralls": "3.1.1",
    "depcheck": "1.4.3",    
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-chai-friendly": "0.7.2",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-mocha": "10.0.5",
    "ethereum-waffle": "^3.4.4",
    "hardhat": "^2.9.9",
    "hardhat-gas-reporter": "^1.0.8",
    "nyc": "15.1.0",
    "prettier": "2.7.1",
    "prettier-plugin-solidity": "1.0.0-beta.19",
    "solhint": "3.3.7",
    "solhint-plugin-eco": "0.1.0",
    "solidity-coverage": "0.7.21",
    "sprintf-js": "1.1.2",
    "ts-node": "^10.8.2",
    "typechain": "^8.1.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.6.0",
    "@openzeppelin/test-helpers": "^0.5.10",
    "web3": "^1.3.3",
    "ethers": "^5.6.9",
    "command-line-args": "^5.1.1", 
    "bip39": "^3.0.3",
    "ethereumjs-wallet": "^1.0.1",
    "express": "^4.17.1",
    "ganache-cli": "^6.12.2",
    "ethereumjs-tx": "^2.1.2",
    "ethereumjs-util": "^7.0.7",
    "dotenv": "^16.0.1"
  },
  "directories": {
    "test": "test"
  }
}
