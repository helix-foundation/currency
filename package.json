{
  "name": "@eco/currency",
  "version": "4.0.2",
  "description": "The Eco cryptocurrency contracts, governance contracts, and associated tooling.",
  "main": "index.js",
  "scripts": {
    "postinstall": "perl -p -i -e 's/js\\|ts\\|es\\|es6\\|jsx/js|ts|es|es6|jsx|sol/g' node_modules/solidity-coverage/plugins/resources/truffle.utils.js",
    "format": "concurrently 'npm:format:*'",
    "format:prettier": "prettier --write 'contracts/**/*.sol'",
    "format:eslint": "eslint --fix 'tools/**/**.js' 'test/**/**.js'",
    "lint": "concurrently 'npm:lint:*'",
    "lint:depcheck": "depcheck --ignore-bin-package --ignores @openzeppelin/contracts,prettier-plugin-solidity,solhint-plugin-eco,@truffle/debug-utils",
    "lint:solhint": "solhint 'contracts/**/*.sol'",
    "lint:eslint": "eslint 'tools/**/**.js' 'test/**/**.js'",
    "lint:prettier": "prettier --check 'contracts/**/*.sol'",
    "build": "truffle compile",
    "test": "truffle test",
    "coverage:js": "npx nyc --reporter=html --reporter=text --reporter=lcov --include 'tools/**.js' --report-dir coverage-nyc truffle test",
    "coverage:sol": "IS_COVERAGE=1 truffle run coverage",
    "coverage": "npm run coverage:js && npm run coverage:sol",
    "generate": "tools/nicks.js $(pwd)/build/contracts/EcoBootstrap.json -s 0x1234 -d 0x00000000000000000000000028e69be378b59264018b11616fbbd15eb345668c -o bootstrap.json -g 3038418",
    "prepack": "npm run build",
    "eco": "node tools/eco.js",
    "eco:dev": "node --inspect-brk=0.0.0.0 tools/eco.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eco/currency.git"
  },
  "keywords": [
    "solidity",
    "ethereum"
  ],
  "files": [
    "tools/**.js",
    "contracts/**.sol",
    "build/contracts/**.json"
  ],
  "author": "Eco Engineering <eng@eco.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eco/currency/issues"
  },
  "homepage": "https://github.com/eco/currency#readme",
  "devDependencies": {
    "@openzeppelin/gsn-helpers": "0.2.4",
    "@openzeppelin/gsn-provider": "0.1.11",
    "@truffle/debug-utils": "5.1.13",
    "bigint-crypto-utils": "3.0.18",
    "bn-chai": "1.0.1",
    "chai": "4.3.4",
    "concurrently": "6.2.1",
    "coveralls": "3.1.1",
    "depcheck": "1.4.2",
    "eslint": "7.32.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-plugin-chai-friendly": "0.7.2",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-mocha": "9.0.0",
    "nyc": "15.1.0",
    "prettier": "2.3.2",
    "prettier-plugin-solidity": "1.0.0-beta.17",
    "solhint": "3.3.6",
    "solhint-plugin-eco": "0.1.0",
    "solidity-coverage": "0.7.17",
    "sprintf-js": "1.1.2",
    "truffle": "5.4.9"
  },
  "dependencies": {
    "@openzeppelin/contracts": "3.4.2",
    "@openzeppelin/test-helpers": "^0.5.10",
    "abi-decoder": "^2.3.0",
    "async-mutex": "^0.3.0",
    "bip39": "^3.0.3",
    "command-line-args": "^5.1.1",
    "ethereumjs-tx": "^2.1.2",
    "ethereumjs-util": "^7.0.7",
    "ethereumjs-wallet": "^1.0.1",
    "express": "^4.17.1",
    "ganache-cli": "^6.12.2",
    "vdf-solver": "^1.0.1",
    "web3": "^1.3.3",
    "winston": "^3.3.3"
  }
}
