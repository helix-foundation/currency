{
  "name": "@helix-foundation/currency",
  "version": "1.0.2",
  "engines": {
    "node": ">=16.6.0"
  },
  "description": "The ECO and ECOx cryptocurrency contracts, governance contracts, and associated tooling.",
  "main": "index.js",
  "scripts": {
    "format": "concurrently 'npm:format:*'",
    "format:prettier": "prettier --write 'contracts/**/*.sol'",
    "format:eslint": "eslint --fix 'tools/**/**.js' 'test/**/**.js' 'test/**/**.ts'",
    "lint": "concurrently 'npm:lint:*'",
    "lint:depcheck": "depcheck --ignore-bin-package --ignores @openzeppelin/contracts,prettier-plugin-solidity,solhint-plugin-eco,concurrently,@types/mocha",
    "lint:solhint": "solhint 'contracts/**/*.sol'",
    "lint:eslint": "eslint 'tools/**/**.js' 'test/**/**.js' 'test/**/**.ts'",
    "lint:prettier": "prettier --check 'contracts/**/*.sol'",
    "build": "hardhat compile",
    "test": "hardhat test",
    "clean": "hardhat clean",
    "snapshots": "UPDATE_SNAPSHOT=1 hardhat test",
    "debug": "hardhat test",
    "coverage:sol": "IS_COVERAGE=1 hardhat coverage",
    "coverage": "npm run coverage:js && npm run coverage:sol",
    "generate": "tools/nicks.js $(pwd)/build/contracts/EcoBootstrap.json -s 0x1234 -d 0x00000000000000000000000028e69be378b59264018b11616fbbd15eb345668c -o bootstrap.json -g 3038418",
    "prepack": "npm run build",
    "deploy": "npm run build && node tools/eco.js --config",
    "test:all": "yarn test && yarn test:hardhat",
    "typechain": "hardhat typechain",
    "test:hardhat": "yarn typechain && hardhat test test/**/*.ts",
    "publishRepo": "cd lib && npm publish",
    "publishRepoTest": "cd libTest && npm publish",
    "publishLocal": "cd lib && npm pack",
    "prepareLib": "yarn build && npx ts-node scripts/publish/prepare.ts && cd lib && npx tsup src/index.ts",
    "prepareLibTest": "yarn build && npx ts-node scripts/publish/prepare-test.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/helix-foundation/currency.git"
  },
  "keywords": [
    "solidity",
    "ethereum"
  ],
  "files": [
    "tools/**.js",
    "contracts/**.sol",
    "build/contracts/**.json"
  ],
  "author": "Eco Engineering <eng@eco.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/helix-foundation/currency/issues"
  },
  "homepage": "https://github.com/helix-foundation/currency#readme",
  "devDependencies": {
    "@metamask/eth-sig-util": "5.0.0",
    "@nomicfoundation/hardhat-chai-matchers": "1.0.3",
    "@nomicfoundation/hardhat-network-helpers": "1.0.6",
    "@nomiclabs/hardhat-ethers": "2.1.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.2",
    "@typechain/ethers-v5": "10.1.0",
    "@typechain/hardhat": "6.1.3",
    "@types/fs-extra": "^9.0.13",
    "@types/mocha": "9.1.1",
    "@typescript-eslint/eslint-plugin": "5.38.1",
    "@typescript-eslint/parser": "5.38.1",
    "@uniswap/snapshot-gas-cost": "1.0.0",
    "chai": "4.3.6",
    "concurrently": "7.4.0",
    "coveralls": "3.1.1",
    "depcheck": "1.4.3",
    "eslint": "8.24.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-standard": "17.0.0",
    "eslint-plugin-chai-friendly": "0.7.2",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-mocha": "10.1.0",
    "eslint-plugin-n": "15.3.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.0.1",
    "fs-extra": "^11.1.0",
    "ganache-cli": "6.12.2",
    "glob": "^8.0.3",
    "hardhat": "2.11.2",
    "hardhat-gas-reporter": "1.0.9",
    "mocha-chai-jest-snapshot": "1.1.4",
    "prettier": "2.7.1",
    "prettier-plugin-solidity": "1.0.0-dev.23",
    "solhint": "3.3.7",
    "solhint-plugin-eco": "0.1.0",
    "solidity-coverage": "0.8.2",
    "ts-node": "10.9.1",
    "typechain": "8.1.0"
  },
  "dependencies": {
    "@ethersproject/experimental": "^5.7.0",
    "@openzeppelin/contracts": "^4.6.0",
    "bigint-crypto-utils": "3.1.6",
    "bn.js": "^5.2.1",
    "command-line-args": "^5.1.1",
    "dotenv": "^16.0.1",
    "ethers": "^5.6.9",
    "graphql": "^16.6.0",
    "react": "^18.2.0",
    "tsup": "^6.5.0",
    "typescript": "4.8.3"
  }
}
